<!--                    </seq>-->
<!--                </par>-->

                <par>
                    <!-- indefinite loop of media files in the selected order -->
                    <seq repeatCount="indefinite">
                        <img dur="5" src="https://signageos-demo.s3.eu-central-1.amazonaws.com/smil/samples/assets/portrait1.jpg" region="bottom-left-first" fit="meet"></img>
                    </seq>
                </par>

