<smil>
    <head>
        <meta http-equiv="refresh" content="10"/>
        <layout>
            <!-- define the screen resolution -->
            <root-layout width="1920" height="1080" backgroundColor="#18182cccc"/>

            <!-- define the screen layout, in this case single fullscreen zone -->
            <region regionName="main" left="0" top="0" width="1920" height="1080" z-index="1"
                    backgroundColor="#18182c"/>
        </layout>
    </head>
    <body>
        <par repeatCount="indefinite">
            <!-- Wait for the prefetch of media files, once done, start the playback -->
            <par begin="__prefetchEnd.endEvent" repeatCount="indefinite">
                <!-- indefinite loop of media files in the selected order -->
                <!-- in this case it will play  -->
                <seq repeatCount="indefinite">
                    <priorityClass>
                        <seq repeatCount="indefinite">
                            <seq begin="wallclock(2024-04-04T14:39)" end="wallclock(2024-04-04T14:40)">
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/c1.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/c2.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/c3.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/c4.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/c5.mp4"
                                       region="main" soundLevel="0%"></video>
                            </seq>
                        </seq>
                    </priorityClass>
                    <priorityClass higher="pause" pauseDisplay="hide">
                        <seq repeatCount="indefinite">
                            <seq playMode="one">
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/m1.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/m2.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/m3.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/m4.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/m5.mp4"
                                       region="main" soundLevel="0%"></video>
                            </seq>
                            <seq playMode="one">
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/z1.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/z2.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/z3.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/z4.mp4"
                                       region="main" soundLevel="0%"></video>
                                <video src="https://1.signage-cdn.com/other/Martin/test_video/z5.mp4"
                                       region="main" soundLevel="0%"></video>
                            </seq>
                        </seq>
                    </priorityClass>
                </seq>
            </par>
        </par>
    </body>
</smil>
