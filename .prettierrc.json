{
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"requirePragma": false,
	"insertPragma": false,
	"proseWrap": "always",
	"arrowParens": "always",
	"quoteProps": "as-needed",
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"options": {
				"parser": "typescript"
			}
		}
	]
}
